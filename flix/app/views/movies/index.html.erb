<h1><%= pluralize(@movies.size, "Movie") %></h1>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= movie.title %></h2>
    </header>
      <p>
        <%= truncate(movie.description, length: 40, separator: " ") %>
      </p>
      <table>
        <tr>
          <th>Released on:</th>
          <td><%= movie.released_on.to_s %></td>
        </tr>
        <tr>
          <th>Rating:</th>
          <td><%= movie.rating %></td>
        </tr>
        <tr>
          <th>Total Box Office Gross:</th>
          <td><%= format_total_gross(movie) %></td>
          <!-- <td><%= number_to_currency(movie.total_gross) %></td> -->
        </tr>
      </table>
  </article>
<% end %>
